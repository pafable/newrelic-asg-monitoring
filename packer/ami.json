
{
    "variables": {
        "aws_access_key": "{{env `aws_access_key`}}",
        "aws_secret_key": "{{env `aws_secret_key`}}",
        "ami-name": "",
        "aws-region": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "instance_type": "t2.micro",
            "ami_name": "{{user `ami-name`}}-{{timestamp}}",
            "region": "{{user `aws-region`}}",
            "ssh_username": "ec2-user",           
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn2-ami-hvm-2.0.202*",
                    "root-device-type": "ebs"
                },
                "most_recent": true,
                "owners": ["137112412989"]
            },
            "tags": {
                "Name": "{{user `ami-name`}}-20201126"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "init.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../ansible-playbooks/000-base.yml"
        },
        {
            "destination": "/tmp/ansible-playbooks",
            "source": "../ansible-playbooks",
            "type": "file"
        }
    ]
}